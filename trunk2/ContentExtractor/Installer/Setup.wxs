<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
	<Product Id="EDA2CC17-9CE5-43D7-8714-490921143A9D"
		Name="Content Extractor"
		Language="1033"
		Version="1.0.0.0"
		UpgradeCode="BA992713-8165-4FF7-B84D-EE808D72D0A7"
		Manufacturer="Sergey Babenko">
		<Package Id="6123AB03-63EA-45DB-8016-C52B3EB0ACB4"
			Description="Content Extractor installation package"
			Comments="Content Extractor installation package"
			InstallerVersion="200"
			Compressed="yes"/>
